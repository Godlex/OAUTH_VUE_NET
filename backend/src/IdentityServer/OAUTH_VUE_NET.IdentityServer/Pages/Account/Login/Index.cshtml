@page
@model OAUTH_VUE_NET.IdentityServer.Pages.Account.Login.IndexModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="card">
    <h1>Welcome back</h1>
    <p class="subtitle">Sign in to your account to continue</p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <input type="hidden" asp-for="Input.ReturnUrl" />

        <div class="form-group">
            <label asp-for="Input.Username">Username</label>
            <input type="text" asp-for="Input.Username" autocomplete="username" autofocus placeholder="e.g. alice" />
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Password</label>
            <input type="password" asp-for="Input.Password" autocomplete="current-password" placeholder="••••••••" />
        </div>

        <div class="form-group checkbox">
            <input type="checkbox" asp-for="Input.RememberLogin" />
            <label asp-for="Input.RememberLogin">Remember me</label>
        </div>

        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>

    <p style="margin-top:1.5rem;text-align:center;font-size:.85rem;color:#9ca3af;">
        Test accounts: <strong>alice / Alice123!</strong> &nbsp;|&nbsp; <strong>bob / Bob123!</strong>
    </p>
</div>
